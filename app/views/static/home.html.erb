<div class="card text-center">
  <div class="card-header">
    <h2 class="header">Welcome to Coursify!</h2>
  </div>
  <div class="card-body">
    <p class="grey-text text-darken-3 lighten-3">
      <% if !user_signed_in? %>
        <h3>Let's get <%= link_to 'started'.html_safe, get_started_url, class: 'btn btn-primary' %>.</h3>
      <% else %>
        <% if current_user.has_role?(:teacher) %>
          <h3>Create a new Institute profile <%= link_to 'here'.html_safe, new_institute_url(subdomain: ''), class: 'btn btn-primary' %>.</h3>
        <% end %>
      <% end %>
    </p>    
  </div>
</div>
