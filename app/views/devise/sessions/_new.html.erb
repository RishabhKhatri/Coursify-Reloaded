<div class="row">
  <div class="offset-sm-2 col-sm-8 offset-sm-2">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      
      <div class="form-group">
        <div class="input-group mb-2 mb-sm-0">
          <div class="input-group-addon">Name</div>
          <%= f.text_field :email, autofocus: true, class: 'form-control', placeholder: "Name" %>
        </div>
      </div>

      <div class="form-group">
        <div class="input-group mb-2 mb-sm-0">
          <div class="input-group-addon">Password</div>
          <%= f.password_field :password, autocomplete: "off", class: 'form-control', id: 'signin-passwd', placeholder: "Password" %>
        </div>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="form-group row">
          <div class="col-10">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        </div>
      <% end %>

      <div class="form-group actions">
        <%= f.submit "Log in", class: 'btn btn-primary' %>
        <%= link_to '<i class="fa fa-facebook-official" aria-hidden="true"></i> Sign in with Facebook'.html_safe, user_facebook_omniauth_authorize_path, class: 'btn btn-dark' %>
        <%= link_to '<i class="fa fa-google" aria-hidden="true"></i> Sign in with Google'.html_safe, user_google_oauth2_omniauth_authorize_path, class: 'btn btn-dark' %>
      </div>
    <% end %>
  </div>
</div>