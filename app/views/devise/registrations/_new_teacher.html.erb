<div class="row">
  <div class="offset-sm-1 col-sm-10 offset-sm-1">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { id: 'teacher_form' }) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-row">
        <div class="form-group col-sm-6">
          <%= f.label :name, class: 'col-form-label', for: 'teacher-name' %>
          <%= f.text_field :name, autofocus: true, class: 'form-control', id: 'teacher-name', placeholder: "Name" %>
        </div>

        <div class="form-group col-sm-6">
          <%= f.label :email, class: 'col-form-label', for: 'teacher-email' %>
          <%= f.email_field :email, class: 'form-control', id: 'teacher-email', placeholder: "E-mail" %>
        </div>
      </div>
      
      <div class="form-row">
        <div class="form-group col-sm-6">
          <%= f.label :dob, "D.O.B", class: 'col-form-label', for: 'teacher-dob' %>
          <%= f.date_field :dob, class: 'form-control', id: 'teacher-dob', placeholder: "Contact" %>
        </div>

        <div class="form-group col-sm-6">
          <%= f.label :contact, class: 'col-form-label', for: 'teacher-contact' %>
          <%= f.text_field :contact, class: 'form-control', id: 'teacher-contact', placeholder: "Contact" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :expertise, class: 'col-form-label', for: 'teacher-expertise' %>
        <%= f.text_field :expertise, class: 'form-control', id: 'teacher-expertise', placeholder: "Expertise" %>
      </div>

      <%= f.hidden_field :account_type, :value => "teacher" %>

      <div class="form-row">
        <div class="form-group col-sm-6">
          <%= f.label :password, class: 'col-form-label', for: 'teacher-passwd' %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "off", class: 'form-control', id: 'teacher-passwd', placeholder: "Password" %>
        </div>

        <div class="form-group col-sm-6">
          <%= f.label :"Confirmation", class: 'col-form-label', for: 'teacher-confirm' %>
          <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', id: 'teacher-confirm', placeholder: "Confirm Password" %>
        </div>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class: 'btn btn-primary btn-block' %>
      </div>
    <% end %>
  </div>
</div>