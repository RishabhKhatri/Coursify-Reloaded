<div class="card">
	<div class="card-header">
		<h1><center>Manage Institute Profiles</center></h1>
	</div>
	<div class="card-body">
		<center>
			<h5>Have an invitation code? Join here: </h5>
			<%= form_with(model: @institute, url: join_institute_url, id: :invitation_form) do |f| %>
				<%= f.text_field :join_code, placeholder: "Code", name: "join_code" %>
				<%= f.submit "Join", class: 'btn btn-dark' %>
			<% end %>
		</center>
		<br>
		<div class="row">
			<div class="col-sm-4">
				<h2><center>Super Admin</center></h2>
				<div class="list-group">
					<% @super_admins.each do |i| %>
						<%= link_to i.name, root_url(subdomain: i.slug), class: 'list-group-item list-group-item-action list-group-item-primary' %>
					<% end %>
				  </a>
				</div>
			</div>
			<div class="col-sm-4">
				<h2><center>Admin</center></h2>
				<div class="list-group">
					<% @admins.each do |i| %>
						<%= link_to i.name, root_url(subdomain: i.slug), class: 'list-group-item list-group-item-action list-group-item-primary' %>
					<% end %>
				  </a>
				</div>
			</div>
			<div class="col-sm-4">
				<h2><center>Teacher</center></h2>
				<div class="list-group">
					<% @teachers.each do |i| %>
						<%= link_to i.name, root_url(subdomain: i.slug), class: 'list-group-item list-group-item-action list-group-item-primary' %>
					<% end %>
				  </a>
				</div>
			</div>
		</div>
	</div>
</div>

<script type="text/javascript">
	$(document).ready(function() {
		$("#invitation_form").validate({
			debug: false,
			errorElement: 'small',
			errorClass: 'form-text text-muted error',
			rules: {
				"join_code": {minlength: 11, required: true}
			}
		});
	});
</script>
